.unidades
	height 100vh
	width 100% 
	margin 50px 0px
	display flex
	flex-direction column
	margin-top 50px 
	 
		
.unidadesCamiones
	width 100%
	padding-top 100px
	margin-bottom 50px  

	h1
		text-align center
		text-transform uppercase
		color $purple  
	
	img
		display block
		margin 0 auto
	
	+below($mobile)		
		img
			margin 0 auto
			width 100%   	

.clientes
	width 100%
	
	h1
		text-align center
		text-transform uppercase
		color $purple  


.logosClientes
	width 100%
	display flex
	flex-direction row
	-webkit-justify-content center 
	justify-content center 
	align-content center
	margin-bottom 50px
	

	+below($mobile)
		flex-wrap wrap

		

  
		 
	

